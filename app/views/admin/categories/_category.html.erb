<tr>
  <td><%= category.id %></td>
  <td><%= category.name %></td>
  <td><%= category.description %></td>
  <td>
    <%= link_to "Words", admin_category_words_path(category), class: "btn btn-success" %>
    <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-success" %>
    <%= link_to "Delete", admin_category_path(category), method: :delete,
                            data: {confirm: "Are you sure?"},
                            class: "btn btn-danger" %>
  </td>
</tr>
