<tr>
  <td><%= word.id %></td>
  <td>
    <%= link_to word.text,
                edit_admin_category_word_path(@category, word),
                class: "glyphicon glyphicon-pencil" %>
  </td>
  <% word.answers.each do |ans| %>
    <td>
      <% if ans.correct %>
        <i class="glyphicon glyphicon-ok"></i>
      <% elsif %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>
      <%= ans.text %>
    </td>
  <% end %>
  <td>
    <%= link_to "Delete", admin_category_word_path(@category, word), method: :delete,
                data: {confirm: 'Are you sure?'},
                class: "btn btn-danger" %>
  </td>
</tr>