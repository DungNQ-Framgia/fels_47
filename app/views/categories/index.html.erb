<% provide(:title, "Categories") %>
<h1>List Categories</h1>
<%= will_paginate %>
<table class="table table-striped table-bordered table-hover">
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= learned_word(category, current_user) %></td>
        <td>
          <%= link_to "Learn new word", new_category_lesson_path(category, :type => Lesson::LESSON_TYPE_NEW) %>
          <%= link_to "Review", new_category_lesson_path(category, :type => Lesson::LESSON_TYPE_REVIEW) %>
          <%= link_to "All", new_category_lesson_path(category) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>